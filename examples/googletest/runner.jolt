from jolt.pkgs import googletest
from jolt.plugins.googletest import GTestRunner
from jolt.plugins.ninja import CXXExecutable


class Test(CXXExecutable):
    cxxflags = ["-std=c++17"]
    requires = ["gtest/main"]
    sources = ["test.cpp"]


class Run(GTestRunner):
    requires = ["test"]
    shuffle = False
