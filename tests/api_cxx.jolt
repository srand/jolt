        --- file: main.cpp
        int func();
        int main() {{return func();}}

        --- tasks:
        class Lib(CXXLibrary):
            sources = ["lib.cpp"]

        class Exe(CXXExecutable):
            requires = "lib"
            sources = ["main.cpp"]

        class Run(Task):
            requires = ["exe"]

            def run(self, deps, tools):
                tools.run("exe")
        ---
        """
        self.build("run")
        with self.tools.cwd(self.ws):
            self.tools.write_file("lib.cpp", "int func() {{return 1;}}")
