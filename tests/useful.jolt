from jolt import Task, IntParameter
import time

class Pass(Task):
    pass


class Fail(Task):
    def run(self, deps, tools):
        assert False, "Always fails"


class Unstable(Task):
    unstable = True

    def run(self, deps, tools):
        assert False, "Always fails"


class Sleep(Task):
    t = IntParameter()

    def run(self, deps, tools):
        time.sleep(int(self.t))
